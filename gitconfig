[user]
	name=jackchuka
	email=jack16.m.u@gmail.com
	signingkey = 6E838AE26BF7BE25
[core]
	editor=vim
	excludesfile=~/.gitignore_global
[alias]
	lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white) - %an%C(reset)%C(bold yellow)%d%C(reset)'
	lga = !git lg --all
	# clean merged local branch
	cleanup = !git branch --merged | grep  -v '\\*\\|master\\|main\\|develop' | xargs -n 1 git branch -d
	# checkout with incremental serach, require peco
	ch = !git branch -a | perl -nlE 'say if !$c{$_}++' | grep -v -- '->' | peco | cut -b 3- | xargs git checkout
	# list and checkout PRs on GitHub
	pr = ! gh pr checkout $(gh pr list | peco | awk '{ print $1 }')
	# show pr preview
	review = !git diff origin/$(git symbolic-ref refs/remotes/origin/HEAD | cut -d/ -f4)
	pb = !git pull origin $(git symbolic-ref --short HEAD)
	save = !git add . && git stash && git stash apply
[ghq]
	root = ~/ghq
[pull]
	rebase = false
[url "git@github.com:"]
	insteadOf = https://github.com/
[commit]
	gpgsign = true
[gpg]
	program = gpg
[init]
	defaultBranch = main
